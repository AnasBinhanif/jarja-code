<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/ep_toolbar"
            layout="@layout/base_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGrey_light"
            android:layout_below="@+id/ep_toolbar"
            android:padding="@dimen/_15sdp"
            tools:context=".Activities.login.LoginActivity">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/first_name"
                        android:textSize="14dp"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtName"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:paddingLeft="12dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14dp"
                        android:inputType="textPersonName"
                        android:background="@drawable/bg_search" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/last_name"
                        android:textSize="14dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtAgent"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:paddingLeft="12dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14dp"
                        android:background="@drawable/bg_search" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/spouse_name"
                        android:textSize="14dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtEventTitle"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:paddingLeft="12dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14dp"
                        android:background="@drawable/bg_search" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cell_phone"
                        android:textSize="14dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtLocation"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:paddingLeft="12dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14dp"
                        android:inputType="textPostalAddress"
                        android:background="@drawable/bg_search" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/birthday"
                        android:textSize="14dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtStartDate"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:paddingLeft="12dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14dp"
                        android:inputType="date"
                        android:drawableRight="@drawable/ic_calendar"
                        android:paddingRight="12dp"
                        android:background="@drawable/bg_search" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/anniversary"
                        android:textSize="14dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtAnniversary"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:paddingLeft="12dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14dp"
                        android:inputType="date"
                        android:drawableRight="@drawable/ic_calendar"
                        android:paddingRight="12dp"
                        android:background="@drawable/bg_search" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/company"
                        android:textSize="14dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtReminder"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:paddingLeft="12dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14dp"
                        android:background="@drawable/bg_search" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/street_address_1"
                        android:textSize="14dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:paddingLeft="12dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14dp"
                        android:background="@drawable/bg_search" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/street_address_2"
                        android:textSize="14dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:paddingLeft="12dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14dp"
                        android:background="@drawable/bg_search" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/city_1"
                        android:textSize="14dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:paddingLeft="12dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14dp"
                        android:background="@drawable/bg_search" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/city_2"
                        android:textSize="14dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:paddingLeft="12dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14dp"
                        android:background="@drawable/bg_search" />


                    <Button
                        android:id="@+id/btnSaveAndSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/save"
                        android:gravity="center"
                        android:textAllCaps="false"
                        android:background="@color/colorGreen"
                        android:textColor="@color/colorWhite" />


                </LinearLayout>

            </ScrollView>

        </RelativeLayout>

    </RelativeLayout>

</layout>
