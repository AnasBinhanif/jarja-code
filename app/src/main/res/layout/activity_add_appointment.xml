<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/ep_toolbar"
            layout="@layout/base_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ep_toolbar"
            android:background="@color/colorGrey_light"
            android:padding="@dimen/_15sdp"
            tools:context=".Activities.login.LoginActivity">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_appointment"
                        android:textColor="@color/colorTitle"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:text="@string/name_of_contact"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/edtName"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="5dp"
                        android:gravity="left|center"
                        android:background="@drawable/bg_search"
                        android:hint="@string/name_of_contact"
                        android:textColor="@color/colorPrimaryDark"
                        android:inputType="textPersonName"
                        android:paddingLeft="12dp"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/agent"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <com.project.jarjamediaapp.BabushkaText
                        android:id="@+id/edtAgent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="45dp"
                        android:gravity="left|center"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@drawable/bg_search"
                        android:hint="@string/nothing_selected"
                        android:paddingLeft="12dp"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/event_title"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtEventTitle"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_search"
                        android:hint="@string/event_title"
                        android:paddingLeft="12dp"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/location"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtLocation"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_search"
                        android:hint="@string/location"
                        android:textColor="@color/colorPrimaryDark"
                        android:inputType="textPostalAddress"
                        android:paddingLeft="12dp"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/description"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtDescription"
                        android:layout_width="match_parent"
                        android:layout_height="95dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_search"
                        android:gravity="top"
                        android:hint="@string/description"
                        android:textColor="@color/colorPrimaryDark"
                        android:inputType="textLongMessage"
                        android:paddingLeft="12dp"
                        android:paddingTop="12dp"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/start_date"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/edtStartDate"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="left|center"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@drawable/bg_search"
                        android:drawableRight="@drawable/ic_calendar"
                        android:hint="@string/start_date"
                        android:inputType="date"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/end_date"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/edtEndDate"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="left|center"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@drawable/bg_search"
                        android:drawableRight="@drawable/ic_calendar"
                        android:hint="@string/end_date"
                        android:inputType="date"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/start_time"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/edtStartTime"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="left|center"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@drawable/bg_search"
                        android:drawableRight="@drawable/ic_calendar"
                        android:hint="@string/start_time"
                        android:inputType="date"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/end_time"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/edtEndTime"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="left|center"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@drawable/bg_search"
                        android:drawableRight="@drawable/ic_calendar"
                        android:hint="@string/end_time"
                        android:inputType="date"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/reminder"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/spnReminder"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_search"
                        android:hint="@string/reminder"
                        android:gravity="left|center"
                        android:textColor="@color/colorPrimaryDark"
                        android:paddingLeft="12dp"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/via"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/spnVia"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_search"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/via"
                        android:gravity="left|center"
                        android:textColor="@color/colorPrimaryDark"
                        android:paddingLeft="12dp"
                        android:textSize="14dp" />

                    <CheckBox
                        android:id="@+id/cbAllDay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:text="@string/all_day"
                        android:textColor="@color/kprogresshud_default_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/btnSave"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@color/colorGreen"
                            android:text="@string/save"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite" />

                        <Button
                            android:id="@+id/btnCancel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@color/colorRed"
                            android:text="@string/cancel"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </RelativeLayout>

    </RelativeLayout>

</layout>
