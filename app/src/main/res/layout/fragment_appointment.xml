<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGrey_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_15sdp"
                    android:gravity="center|left">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/appointment"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fbAddAppoint"
                        style="@style/Widget.Design.FloatingActionButton"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:backgroundTint="@color/colorPrimaryDark"
                        app:backgroundTint="@color/colorPrimaryDark"
                        app:elevation="0dp"
                        app:fabCustomSize="45dp"
                        app:hoveredFocusedTranslationZ="0dp"
                        app:srcCompat="@drawable/ic_add" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btnToday"
                            style="@style/TabButtonYellowLeft"
                            android:text="@string/today" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_nostroke_transparent"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btnUpcoming"
                            style="@style/TabButtonTranparentMiddle"
                            android:text="@string/upcoming" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btnPrevious"
                            style="@style/TabButtonTranparentRight"
                            android:text="@string/previous" />

                    </LinearLayout>


                </LinearLayout>


                <TextView
                    android:id="@+id/tvNoRecordFound"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:text="@string/no_records"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAppointments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:nestedScrollingEnabled="true"
                    android:visibility="gone" />


            </LinearLayout>

    </RelativeLayout>

</layout>